{

  "description": "Disable all the shiny and inappropriate CSS3 animations",
  "manifest_version": 2,
  "name": "no-transition",
  "version": "1.0",
  "homepage_url": "http://github.com/gagarine/no-transition",
  "license": "Mozilla Public License, version 2.0",

  "background": {
    "scripts": ["background.js"]
  },

 "browser_action": {
  "browser_style": false,
  "default_icon": "icons/pause.svg",
  "default_title": "Pause annimation"
},
 "icons": {
    "48": "icon.png",
    "96": "icon@2x.png"
  },
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>"
  ]
}
